{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Panasonic PTZ Options",
    "type": "object",
    "properties": {
        "host": {
            "type": "string",
            "ui:title": "Host"
        },
        "port": {
            "type": "integer",
            "ui:title": "Port"
        },
        "https": {
            "type": "boolean",
            "ui:title": "Use HTTPS",
            "default": false
        }
    },
    "required": ["host", "port"],
    "additionalProperties": false
}
