{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "OSC Options",
    "type": "object",
    "properties": {
        "host": {
            "type": "string",
            "ui:title": "Host"
        },
        "port": {
            "type": "integer",
            "ui:title": "Port"
        },
        "type": {
            "type": "string",
            "ui:title": "Type",
            "title": "OSCDeviceType",
            "default": "udp",
            "enum": ["tcp", "udp"],
            "tsEnumNames": ["TCP", "UDP"]
        }
    },
    "required": ["host", "port", "type"],
    "additionalProperties": false
}
